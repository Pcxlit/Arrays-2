int main(){   //        2) Tri diagonal matrix
    cout<<"enter number of order in a square matrix"<<endl;   //order of matrix
    int n;
    cin>>n;
    int arr[n][n];
    for (int i = 1; i <= n; i++)         //create trigonal matrix
    {
        for (int j = 1; j <=n ; j++)
        {
            if (i==j)
            {
                cout<<"enter value of array index "<<i<<i<<endl;
                cin>>arr[i][j];
            }  
            else if (i==(j+1))
            {
                cout<<"enter value of array index "<<i<<j<<endl;
                cin>>arr[i][j];
            }
            else if (j==(i+1))
            {
               cout<<"enter value of array index "<<i<<j<<endl;
               cin>>arr[i][j];
            }
            else
            {
                arr[i][j]=0;
            }
        }
    }
    
    for (int i = 1; i <= n; i++)     //display matrix
    {
        for (int j = 1; j <= n; j++)
        {
            cout<<arr[i][j]<<" ";
        }
      cout<<endl;}
      return 0;
}    


