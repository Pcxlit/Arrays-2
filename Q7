#include<iostream>
using namespace std;
int main(){

cout<<"enter number of elements in an array"<<endl;   //create an array
    int n;
    cin>>n;
    int total_inversions=0;
    int arr[n];
    for (int i = 0; i < n; i++)
    {
        cout<<"enter value of array index "<<i<<endl;
        cin>>arr[i];
    }
    
    for (int i = 0; i < n; i++)     //display an array
    {
        cout<<arr[i]<<" ";
    }
    for (int i = 0; i < n; i++)
    {
        for (int j = (i+1); j < n; j++)
        {
           if (i<j && arr[i]>arr[j])
           {
            total_inversions++;
           }
        }
    }  
    cout<<"total inversions are"<<total_inversions<<endl;
}
